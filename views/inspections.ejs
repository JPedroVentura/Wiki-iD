<%- include('partials/header.ejs') %>

        <body>
            <nav class="navbar navbar-light bg-light">
                <a href="/home" class="btn">Voltar</a>
                <a href="/admin/inspections/new" class="btn">Add Vistoria <i class="bi bi-plus-circle"></i></a>

                <form class="form-inline" style="display: flex;" method="POST" action="/inspections">
                  <input class="form-control mr-sm-2" type="search" placeholder="Ex: Control-id...." aria-label="Search" name="cnpj">
                  <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
                </form>
              </nav>
            <div class="container">
 
                <div class="jumbotron mt-3">
                    <div class="title" style="display: flex; flex-direction: row;">
                        <h1 class="display-4">Wiki-</h1>
                        <h1 class="display-4" style="color: brown;">iD Vistorias</h1>
                    </div>
                    <hr class="my-4">
                </div>
                <br>
                <div class="container home-container">
                    <% inspections.forEach(inspection=> { %>

                        <div class="card home-card">
                            <div class="card-header">
                                <h3>
                                    <%= inspection.enterprise %>
                                    (<%= inspection.status %>)
                                </h3>
                                <span>
                                    <%= inspection.cnpj %>
                                </span>
                            </div>
                            <div class="card-body card-body-home">
                                <a href="/inspections/<%=inspection.slug %>" class="btn btn-success mt-3"><i class="bi bi-eye"></i></a>
                            </div>
                        </div>
                        <br>
                        <% }) %>
                </div>
            </div>
        </body>
        <%- include('partials/footer.ejs') %>