<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<body>
    <div class="container">
        <h2>Usuarios</h2>
        <div class="card">
            <div class="card-header">
                <a href="/admin/users/create" class="btn btn-success">Novo Usuario</a>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                        </tr>
                    </thead>
            </div>
            <div class="card-body">
                <tbody>
                    <% users.forEach(user=> { %>
                        <tr>
                            <th>
                                <%= user.id %>
                            </th>
                            <th>
                                <%= user.email %>
                            </th>
                            <th>
                                <a href="/admin/categories/edit/<%= user.id %>"
                                    class="btn btn-warning">Editar</a>
                                <form action="/categories/delete" method="post" , style="display: inline;"
                                    onsubmit="deleteConfirm(event, this)">
                                    <input type="hidden" name="id" value="<%= user.id %>">
                                    <button class="btn btn-danger" type="submit">Deletar</button>
                                </form>
                            </th>
                        </tr>
                        <% }) %>
                </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
<%- include('../../partials/footer.ejs') %>