<%- include('../../partials/header.ejs'); %>
    <%- include('../../partials/navbar.ejs'); %>
        <div class="container mt-3">
            <h2>Categorias</h2>
            <div class="card mt-3">
                <div class="card-header">
                    <a href="/admin/categories/new" class="btn ">Nova Categoria</a>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Titulo</th>
                                <th>Slug</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                </div>
                <div class="card-body">
                    <tbody>
                        <% categories.forEach(category=> { %>
                            <tr>
                                <th>
                                    <%= category.id %>
                                </th>
                                <th>
                                    <%= category.title %>
                                </th>
                                <th>
                                    <%= category.slug %>
                                </th>
                                <th>
                                    <a href="/admin/categories/edit/<%= category.id %>"
                                        class="btn btn-warning">Editar</a>
                                    <form action="/categories/delete" method="post" , style="display: inline;"
                                        onsubmit="deleteConfirm(event, this)">
                                        <input type="hidden" name="id" value="<%= category.id %>">
                                        <button class="btn btn-danger" type="submit">Deletar</button>
                                    </form>
                                </th>
                            </tr>
                            <% }) %>
                    </tbody>
                    </table>
                </div>
            </div>

        </div>


        <%- include('../../partials/footer.ejs'); %>

            <script>
                function deleteConfirm(e, form) {
                    e.preventDefault();

                    let userInputYes = confirm('Deseja realmente deletar esta categoria?');

                    if (userInputYes) {
                        form.submit();
                    } else {
                        return;
                    }
                }
            </script>