<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/homenavbar.ejs') %>

        <body>
            <div class="container">
                <br>
                <div class="container home-container">
                    <% result.articles.rows.forEach(article=> { %>

                        <div class="card home-card">
                            <div class="card-header">
                                <h3>
                                    <%= article.title %>
                                </h3>
                            </div>
                            <div class="card-body card-body-home">
                                <a href="/<%=  article.slug %>" class="btn ">Visualizar</a>
                            </div>
                        </div>
                        <br>
                        <br>
                        <% }) %>
                        <div class="row">
                            <div class="col col-12">
                                <% if(result.page> 2) { %>
                                    <a href="/articles/page/<%= result.page - 1 %> " style="float: left;"  class="btn  mb-3"> <<< Prev </a>
                                <% } else if(result.page==2) {%>
                                    <a href="/home" style="float: left;"  class="btn  mb-3"><<< Prev </a>
                                <% } %>
                                
                                <% if (result.next) { %>
                                    <a href="/articles/page/<%= result.page + 1 %> " style="float: right;"  class="btn  mb-3">Next >> </a>
                                <% } %>
                                <br>
                                <br>
                            </div>
                        </div>
                </div>
            </div>
            </div>
        </body>
        <%- include('../../partials/footer.ejs') %>